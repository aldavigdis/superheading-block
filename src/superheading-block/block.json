{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "aldavigdis/superheading-block",
	"version": "0.2.0",
	"title": "Superheading by Alda",
	"category": "widgets",
	"description": "Accessible headings for the WordPress Block Editor with superheadings and subheadings.",
	"textdomain": "aldavigdis-superheading",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"attributes": {
		"level": {
			"type": "string",
			"default": "2"
		},
        "textAlign": {
            "type": "string",
            "default": "left"
        },
		"mainHeadingText": {
			"type": "string",
			"selector": ".superheading__main"
		},
		"kickerText": {
			"type": "string",
			"selector": ".superheading__kicker"
		},
		"subheadingText": {
			"type": "string",
			"selector": ".superheading__subheading"
		},
        "href": {
            "type": "string",
            "default": ""
        },
        "linkToNewWindow": {
            "type": "boolean",
            "default": false
        }
	},
    "supports": {
        "splitting": true
    }
}
