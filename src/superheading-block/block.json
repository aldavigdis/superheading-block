{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "aldavigdis/superheading-block",
	"version": "0.1.1",
	"title": "Superheading by Alda",
	"category": "widgets",
	"description": "Accessible headings for the WordPress Block Editor with superheadings and subheadings.",
	"textdomain": "aldavigdis-superheading",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"attributes": {
		"level": {
			"type": "string",
			"default": "2"
		},
		"algign": {
			"type": "string",
			"default": "left"
		},
		"mainHeadingText": {
			"type": "string",
			"selector": ".superheading__main"
		},
		"kickerText": {
			"type": "string",
			"selector": ".superheading__kicker"
		},
		"subheadingText": {
			"type": "string",
			"selector": ".superheading__subheading"
		}
	}
}
